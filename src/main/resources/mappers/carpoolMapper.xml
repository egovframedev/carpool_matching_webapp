	<select id="selectDriver" resultType="memberDTO" parameterType="Integer">
		SELECT * 
 		  FROM member 
 		 WHERE MNO =
					 (SELECT MNO 
						FROM CARPOOL_MATCH 
					   WHERE   carpool_match.isdriver= 1
							   AND MATCHNO = (SELECT MATCHNO
												FROM CARPOOL_MATCH
											    WHERE MNO=#{MNO}))
	</select>
	

<select id="selectMatInfo" parameterType="Integer" resultType="Cp_joinVO">
  SELECT 
	    DATE_FORMAT(CP_MAT.MATCH_DATE,"%Y %c/%e") AS match_date
    ,   CP_INFO.CHARGE
    ,	START_POINT
    ,	END_POINT
    ,   REG_DATE
    ,   PAYNO
    FROM 
		CARPOOL_INFO CP_INFO
RIGHT JOIN
		CARPOOL_MATCH CP_MAT
      ON
     	CP_INFO.CPNO = CP_MAT.CPNO
 WHERE 
       CP_MAT.MNO=#{MNO}
   AND CP_MAT.PROGRESS =1
</select>
<select id="selectMatInfoByPayno" parameterType="String" resultType="Cp_joinVO">
  SELECT 
	    DATE_FORMAT(CP_MAT.MATCH_DATE,"%Y %c/%e") AS match_date
    ,   CP_INFO.CHARGE
    ,	START_POINT
    ,	END_POINT
    ,   REG_DATE
    ,   PAYNO
    FROM 
		CARPOOL_INFO CP_INFO
RIGHT JOIN
		CARPOOL_MATCH CP_MAT
      ON
     	CP_INFO.CPNO = CP_MAT.CPNO
 WHERE 
       CP_MAT.PAYNO=#{PAYNO}
   AND CP_MAT.PROGRESS =1
</select>

