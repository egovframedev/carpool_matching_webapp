<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="payment.PayMapper">
	<insert id="insertOne" parameterType="paymentDTO">
		insert into payment(payno,amount,apply_num,pay_date)
		values (#{payno},#{amount},#{apply_num},#{pay_date})
	</insert>
	<select id="selectList" resultType="paymentDTO">
		select * 
		  from payment
	  order by pay_date desc 
	</select>
</mapper>